    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet" />
    <link rel="stylesheet" href="/public/css/editor.css" />
  </head>
  <body id="<%= data.id; %>">
    <main>
      <center>
        <h1>Edytuj ogłoszenie</h1>
        <div class="title_container">
          <div class="title_background">
            <h2 class="title"><%= data.title; %></h2>
          </div>
        </div>
        <form
          class="form"
          action="/upload"
          method="post"
          enctype="multipart/form-data">
          <input
            placeholder="Podaj tytuł"
            type="text"
            maxlength="100"
            name="title"
            value="<%= data.title; %>"
            id="title"
            required
            />
          <input
            placeholder="Podaj cenę"
            type="number"
            min="0"
            max="50000"
            maxlength="5"
            name="price"
            value="<%= data.price; %>"
            id="price"
            required
            />
          <textarea
            placeholder="Wpisz opis"
            type="text"
            maxlength="1500"
            name="description"
            id="description"
            cols="30"
            rows="10"
            required
            >
<%= data.description; %></textarea
          >
          <div class="characters_left">
            <p class="characters"><%= data.description.length; %></p>
          </div>
        </form>
        <div class="images_container">
          <% for(var i=0; i < data.image.length; i++) {%>
          <div class="image" id="<%= data.image[i].id; %>">
            <img class="img <%= data.image[i].thumbnail ? "image_thumb":""; %>"
            src="<%= data.image[i].url; %>" alt="<%= data.title; %>" ></img>
            <div class="svg" >
              <svg
                version="1.1"
                id="Layer_1"
                xmlns="http://www.w3.org/2000/svg"
